    "license": "BSD-2-Clause",
    "type": "library",
    "keywords": [
        "Module Manager",
        "Module loading",        
        "Module loader",
        "Lazy loading",
        "zf2",
        "zend framework 2"
    ],
    "homepage": "https://github.com/solcre/zf2-conditional-loader",
    "authors": [
        {
            "name": "Matias Fuster",
            "email": "matias.fuster@solcre.com",
            "homepage": "http://www.solcre.com/"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "zendframework/zendframework": "2.3.3"
    },
    "require-dev": {
        "zendframework/zendframework": "2.*",
        "phpunit/phpunit": "4.*",
        "squizlabs/php_codesniffer": "2.*"
    },
    "autoload": {
        "psr-0": {
            "ConditionalLoader": "src/"
        }
    }
}
